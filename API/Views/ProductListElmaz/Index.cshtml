@model List<DataAccess.sp_Product_Select_Elmaz_Result>
@{
    ViewBag.Title = " لیست محصولات "+ ViewBag.Title;
}

<div class="container" dir="rtl">
    <div class="row">
       
        <div class="col-md-12">
            <div class="panel panel-body">
                <h1>
                  @ViewBag.Title
                </h1>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>عنوان</th>
                        <th>تصویر</th>
                        <th>قیمت تومان</th>
                        <th>قیمت تومان با تخفیف</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            <a href="@item.PageUrl">@item.Name</a>
                           
                        </td>
                        <td>
                            <img src="@item.Image_Url"  width="100" height="100"/>
                            
                        </td>
                        <td>
                            @item.PriceSales
                        </td>
                        <td>
                            @(item.PriceSales-item.DiscountPrice)
                        </td>
                    </tr>
                    }

                </tbody>

            </table>
            
        </div>
    </div>
</div>

